import java.util.Scanner;

public class fiturKritikSaran {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
         String sentencesList[] = new String[10];

        System.out.println("Selamat datang di halaman kritik saran");

        while (true) {
            System.out.println("\nSilahkan ketik kalimat (type 'exit' to quit):");
            String sentence = scanner.nextLine();

            if (sentence.equalsIgnoreCase("exit")) {
                break;
            }

            if (sentence == null) {
                System.out.println("Tolong masukan kalimat yang valid.");
                continue;
            }

            for (int i = 0; i < sentencesList.length; i++) {
                
                 sentencesList[i] = sentence;

                System.out.println("Kalimat disimpan!");
            }

            // Menampilkan kalimat yang sudah diinput
            System.out.println("\nList kritik dan saran:");
            for (String savedSentence : sentencesList) {
                System.out.println("- " + savedSentence);
            }
        }

        System.out.println("\nTerimakasih!");
        scanner.close();
    }
}
